# Remove current repository
sudo rm /etc/apt/sources.list.d/ros2.list

# Try the testing repository instead
echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2-testing/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" | sudo tee /etc/apt/sources.list.d/ros2.list > /dev/null

sudo apt update
sudo apt install ros-humble-desktop



###For installing humble on jammy 22.04###




#!/bin/bash

# Step 1: Check if ROS 2 packages are installed
echo "=== Step 1: Checking installed ROS 2 packages ==="
dpkg -l | grep ros-humble
echo -e "\n"

# Step 2: Check if the setup file exists
echo "=== Step 2: Verifying setup file exists ==="
ls -la /opt/ros/humble/setup.bash
echo -e "\n"

# Step 3: Source the environment and test basic ROS commands
echo "=== Step 3: Sourcing environment and testing ROS commands ==="
source /opt/ros/humble/setup.bash
ros2 --help
echo -e "\n"

# Step 4: Check ROS environment variables
echo "=== Step 4: Checking ROS environment variables ==="
printenv | grep ROS
echo -e "\n"

# Step 5: Test with ROS doctor (diagnostic tool)
echo "=== Step 5: Running ROS diagnostics ==="
ros2 doctor
echo -e "\n"

echo "=== Verification complete ==="




